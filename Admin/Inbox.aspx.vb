    Protected Sub ContactUsView_SelectedIndexChanged(sender As Object, e As EventArgs) Handles ContactUsView.SelectedIndexChanged
        Try
            Dim db = New LinqDBClassesDataContext
            Dim qry = From m In db.ContactUs
                      Select m Where m.IDCU = Convert.ToInt32(ContactUsView.SelectedValue)
            For Each q In qry
                q.Seen = "دیده شده"
            Next
            db.SubmitChanges()
            ContactUsView.DataBind()
        Catch ex As Exception
            Response.Write(ex.Message)
        End Try
        Try
            Response.Redirect("Inbox.aspx?ID=" + ContactUsView.SelectedValue.ToString())
        Catch ex As Exception

        End Try
    End Sub
